{
  "name": "Lingvo",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["src/js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://netflix.com/*",
        "https://netflix.com/*",
        "http://www.netflix.com/*",
        "https://www.netflix.com/*"
      ],
      "js": ["src/js/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "permissions": [

  ],
  "web_accessible_resources": [
  ]
}
